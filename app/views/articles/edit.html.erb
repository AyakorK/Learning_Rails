<%= render 'layouts/header' %>

<h1>Edit this article !</h1>
<h2> <%= @article.title %> </h2>

<%= form_for @article do |f| %>

  <% @article.errors.full_messages.each do |message| %>
    <div class="error"> <%= message %> </div>
  <% end %>
  <div  class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: @article.title %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", placeholder: @article.body %>
  </div>

  <div class="form-group">
    <%= f.select :status, %w(public private closed), selected: @article.status %>
  </div>

  <div>
    <%= f.submit "Edit", class: "btn btn-primary" %>
  </div>
<% end %>