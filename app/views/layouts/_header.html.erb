<header>
    <%= link_to "Home", root_path%>
    <%= link_to "Articles", articles_path %>

  <% if user_signed_in? %>
    <div class="register">
    <%= current_user.id %>
    <%= link_to "Log out", destroy_user_session_path, data: {
  turbo_method: :delete,
  turbo_confirm: "Are you sure to log out ?"
} %>
    </div>
  <% else %>

    <div class="register">
    <%= link_to "Log in", users_path  %>
    <%= link_to "Register", new_user_session_path %>
    </div>

  <% end %>

</header>
  <%= javascript_include_tag "header" %>
