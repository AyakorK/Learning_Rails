<h2 id="addComment">Add a Comment !</h2>
<%= form_with model: [ @article, @article.comments.build ]  do |f| %>
  <div>
    <%= f.label :commenter %> <br>
    <%= f.text_field :commenter %>
  </div>

  <div>
    <%= f.label :stars %> <br>
    <%= f.text_field :stars %>
  </div>

  <div>
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
  </div>

  <div class="form-group">
    <%= f.select :status, %w(public private), selected: 'public' %>
  </div>

  <div>
    <%= f.submit "Send your comment !", class: "btn btn-primary" %>
  </div>

<% end %>
